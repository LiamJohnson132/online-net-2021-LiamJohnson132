@model List<CarDealership.Models.Queries.UserModel>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>Users</h2>
    @Html.ActionLink("Add a new user", "AddUser", "Admin")
    <div>
        <table class="table table-striped table-bordered" style="margin-top: 1em;">
            <thead>
                <tr>
                    <th scope="col">Last Name</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var user in Model)
            {
                <tr>
                    <td>@user.LastName</td>
                    <td>@user.FirstName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@Html.ActionLink("edit", "EditUser", "Admin", new { @id = user.UserId }, null)</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>