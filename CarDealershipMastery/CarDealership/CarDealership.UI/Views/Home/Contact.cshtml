@model CarDealership.UI.Models.ContactAddViewModel

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <h2 style="margin-top: 1em;">Contact Us</h2>
        <div class="col-6">
            @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "formAddContact" }))
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Name</label>
                    @Html.TextBoxFor(m => m.Contact.Name, new { @class = "form-control", type = "text", required = "true" })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.Contact.Email, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    @Html.TextBoxFor(m => m.Contact.Phone, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Message</label>
                    <textarea name="Contact.Message" id="Contact_Message" class="form-control" rows="6" required>@Model.VIN</textarea>
                </div>
                <button style="margin-top: 1em;" class="btn btn-primary">Submit</button>
            }
        </div>
        <div class="col-6">
            <div class="mapouter">
                <div class="gmap_canvas">
                    <iframe width="600" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=Osseo%20Rd,%20Minneapolis,%20MN&t=&z=17&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://fmovies-online.net"></a><br>
                    <style>
                        .mapouter {
                            position: relative;
                            text-align: right;
                            height: 500px;
                            width: 600px;
                        }
                    </style><a href="https://www.embedgooglemap.net">responsive google map</a>
                    <style>
                        .gmap_canvas {
                            overflow: hidden;
                            background: none !important;
                            height: 500px;
                            width: 600px;
                        }
                    </style>
                </div>
            </div>
            <div>
                <p>123 Osseo Rd</p>
                <p>Minneapolis, MN 55401</p>
                <p>Sales: 555-123-4567</p>
                <p>Service: 555-123-4568</p>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/App/Script.js"></script>
    <script>
        $(function () {
            $('#formAddContact').validate({
                rules: {
                    'Contact.Name': {
                        required: true
                    },
                    'Contact.Email': {
                        required: true,
                        email: true
                    },
                    'Contact.Phone': {
                        required: true
                    },
                    'Contact.Message': {
                        required: true
                    }
                }
            })
        })
    </script>
}